{% extends 'base.html.twig' %}

{% block title %}Liste des membres
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="my-5">Liste des membres</h1>

		<table class="table table-hover border text-center">
			<thead>
				<tr>
					<th>id</th>
					<th>Avatar</th>
					<th>Nom Complet</th>
					<th>email</th>
					<th>articles en lignes</th>
					<th colspan="2">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr class="table">
						<td>{{user.id}}</td>
						<td>
							<img src="{{user.avatar}}" width="60px" class="rounded">
						</td>
						<td>{{user.fullname}}</td>
						<td>{{user.email}}</td>
						<td>{{  user.articles | length}}</td>
						<td>
							<a href="{{ path('account_profil' , {'slug': user.slug } ) }}" class="btn btn-primary">
								<i class="fas fa-eye"></i>
							</a>
						</td>
						<td>
							<form class="d-inline" action="{{ path('account_delete' , {'slug': user.slug } ) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer cette utilisateur ?');">
								<button class="btn btn-danger">
									<i class="fa fa-trash"></i>
								</button>
							</form>
						</td>
					</tr>
					<tr>
					{% endfor %}
				</tbody>
			</tbody>
		</table>

	</div>

{% endblock %}
