{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-5 text-center">Connectez vous</h1>

		{% if hasError %}
			<div class="col-4 alert alert-danger m-auto">
				Email ou mot de passe invalide
			</div>
		{% endif %}

		<form action="{{ path('account_login')}}" class="m-auto col-6" method="POST">
			<div class="form-group">
				<label for="email">Email</label>
				<input type="text" value="{{username}}" name="_username" id="email" class="form-control" placeholder="Votre email" required>
			</div>
			<div class="form-group">
				<label for="password">Mot de passe</label>
				<input type="password" name="_password" id="password" class="form-control" placeholder="Votre mot de passe" required>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-success">Connexion</button>
			</div>
		</form>

	</div>

{% endblock %}
